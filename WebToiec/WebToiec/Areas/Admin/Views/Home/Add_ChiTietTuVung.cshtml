@model WebToiec.Models.Model_TuVung

@{
    ViewBag.Title = "Add_ChiTietTuVung";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}
<script src="~/Scripts/ckeditor/ckeditor.js"></script>

@using (Html.BeginForm("Add_ChiTietTuVung", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="card">
        <div class="card-body">
            <h2>Thêm Từ Vựng Vào Chủ Đề</h2>

            <h4>Chi Tiết Từ Vựng</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.Tu_Vung, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("DSTuVung", null, new { @class = "form-control form-control-lg" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TEN_CHU_DE, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("DSChuDe", null, new { @class = "form-control form-control-lg" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NGHIA_CUA_TU, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NGHIA_CUA_TU, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NGHIA_CUA_TU, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PHAT_AM, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="file" name="UpHinh" />
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PHIEN_AM, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PHIEN_AM, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PHIEN_AM, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.VI_DU, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.VI_DU, new { @class = "form-control", @rows = "10", @cols = "50", @id = "txt_vidu", @name = "txt_vidu" })
                    <script>CKEDITOR.replace('txt_vidu');</script>
                    @Html.ValidationMessageFor(model => model.VI_DU, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.HIN_HANH, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="file" name="UpHinh" />
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TheLoai, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TheLoai, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TheLoai, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-success" onclick="return message();" />
                    @Html.ActionLink("Back To List", "ToanBoChiTietTuVung", "Home", new { @class = "btn btn-danger" })
                </div>
            </div>
        </div>
        </div>
}

<script type="text/javascript">
           function message() {
                var status = '@TempData["SuccesMessage"]';
               if (status) {
                   alert(status.toString());
                }
            }
</script>