@model DAL.EF.CHI_TIET_TU_VUNG

@{
    ViewBag.Title = "Edit_ChiTietTuVung";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}
<script src="~/Scripts/ckeditor/ckeditor.js"></script>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-body">
            <h2>Cập Nhật Chi Tiết Từ Vựng </h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID)

            <div class="form-group">
                Từ Vựng
                <div class="col-md-10">
                    @Html.DropDownList("DSTuVung", null, new { @class = "form-control form-control-lg" })
                </div>
            </div>

            <div class="form-group">
                Tên Chủ Đề
                <div class="col-md-10">
                    @Html.DropDownList("DSChuDe", null, new { @class = "form-control form-control-lg" })
                </div>
            </div>

            <div class="form-group">
                Nghĩa Của Rừ
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NGHIA_CUA_TU, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NGHIA_CUA_TU, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Phát ÂM
                <div class="col-md-10">
                    <input type="file" name="UpHinh" />
                </div>
            </div>

            <div class="form-group">
                Phiên Âm
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PHIEN_AM, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PHIEN_AM, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Ví Dụ
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.VI_DU, new { @class = "form-control", @rows = "10", @cols = "50", @id = "txt_vidu", @name = "txt_vidu" })
                    <script>CKEDITOR.replace('txt_vidu');</script>
                    @Html.ValidationMessageFor(model => model.VI_DU, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Hình Ảnh
                <div class="col-md-10">
                    <input type="file" name="UpHinh" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-success" onclick="return message();" />
                    @Html.ActionLink("Back To List", "ChiTietTuVung", "Home", new { id = Model.ID_TUVUNG }, new { @class = "btn btn-danger" })
                </div>
            </div>
        </div>
    </div>
}
<script type="text/javascript">
           function message() {
                var status = '@TempData["SuccesMessage"]';
               if (status) {
                   alert(status.toString());
                }
            }
</script>
