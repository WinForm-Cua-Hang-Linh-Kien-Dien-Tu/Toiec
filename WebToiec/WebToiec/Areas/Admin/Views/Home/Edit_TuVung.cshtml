@model DAL.EF.TUVUNG

@{
    ViewBag.Title = "Edit_TuVung";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}



@using (Html.BeginForm())
{
    <div class="card">
        <div class="card-body">
            <h2>Cập Nhật Từ Vựng</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID_TUVUNG)

            <div class="form-group">
                Từ Vựng
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TU, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TU, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Loại Từ Vừng
                <div class="col-md-10">
                    @Html.EditorFor(model => model.THELOAI, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.THELOAI, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-success" />
                    @Html.ActionLink("Back to List", "TuVung", "Home", new { @class = "btn btn-danger" })
                </div>
            </div>
        </div>
    </div>
 }

